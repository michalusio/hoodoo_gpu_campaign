var input_tuples = [
    [  2, 0x20000015],// Set to Screen Clear
    [  3, 0x00000002],// Draw 2 triangles
  [19300, 0x20000000],// Set to All Red
    [  3, 0x00000002],// Draw 2 triangles
]

def get_input($scratch_space: [Int], tick: Int, $inputs: [Int]) {
    var value = 0
    var i = 0
    while i < .input_tuples.len() {
        let tuple = .input_tuples[i]
        if tick == tuple[0] {
            value = tuple[1]
            break
        }
        i += 1
    }
    inputs[0] = value
}

def check_output($scratch_space: [Int], tick: Int, inputs: [Int], outputs: [Int]) TestResult {
    if tick == 0 {
        if get_ram_count() != 2 {
            set_error("You should have one RAM for the pixel screen, and one for the program")
            return fail
        }
        if get_program_address() != 0 {
            set_error("The program's address at the start should be at zero")
            return fail
        }
    }
    return pass
}
